# the IP(s) on which your node server is running i choose the port 3000
upstream app_withouttheloop {
    server 127.0.0.1:3000;
}

# the nginx server instance
server {
    listen 80;
    server_name withouttheloop.com;
    access_log /var/log/nginx/withouttheloop.log;

    # pass the request to the node.js server with the correct headers and much more can be added, see nginx config options
    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      proxy_pass http://app_withouttheloop/;
      proxy_redirect off;
    }
 }
